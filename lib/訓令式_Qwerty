# -*- coding: utf-8 -*-

require './generator'
g = Generator.new


t = []

子音 = {
  か行: {左右: :右, 段: :上, 番号: 2},
  さ行: {左右: :右, 段: :中, 番号: 4}
}

t += g.変換(:あ行, 母音位置: {左右: :左, 段: :中})
t += g.変換('かきくけこ', 子音位置: 子音[:か行], 母音位置: {左右: :左, 段: :中})
t += g.変換('さしすせそ', 子音位置: 子音[:さ行], 母音位置: {左右: :左, 段: :中})
