# t += g.変換('や　ゆ　よ', 子音位置: {左右: :右, 段: :下, 番号: 3}, 母音位置: {左右: :左, 段: :中})
# t += g.変換('らりるれろ', 子音位置: {左右: :右, 段: :上, 番号: 3}, 母音位置: {左右: :左, 段: :中})
# t += g.変換('わゐ　ゑを', 子音位置: {左右: :右, 段: :下, 番号: 2}, 母音位置: {左右: :左, 段: :中})
