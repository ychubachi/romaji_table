# t += g.変換('なにぬねの', 子音位置: {左右: :右, 段: :中, 番号: 3}, 母音位置: {左右: :左, 段: :中})
# t += g.変換('はひふへほ', 子音位置: {左右: :右, 段: :中, 番号: 1}, 母音位置: {左右: :左, 段: :中})
