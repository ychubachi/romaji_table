# t += g.変換('ぱぴぷぺぽ', 子音位置: {左右: :右, 段: :上, 番号: 0}, 母音位置: {左右: :左, 段: :中})

################################################################
#
# 拗音
#

# 拗音鍵 = {左右: :右, 段: :中, 番号: 1}
拗音鍵 = {左右: :右, 番号: 1}

t += g.変換(:きゃ行, 子音位置: 子音[:か行], 拗音化: 拗音鍵, 母音位置: {左右: :左, 段: :中})
t += g.変換(:しゃ行, 子音位置: 子音[:さ行], 拗音化: 拗音鍵, 母音位置: {左右: :左, 段: :中})

t.each do |i|
  puts "#{i[0]}\t#{i[1]}"
end
